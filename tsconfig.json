{
  "compilerOptions": {
    "target": "es2015",
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./build"
    ]
  },
  "exclude": [
    "logs",
    "node_modules"
  ]
}
